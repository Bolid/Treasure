<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e7f4eb">
    <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/substrate_layout_result"
            android:layout_alignParentBottom="true"/>
    <ru.omdroid.DebtCalc.CustomView.DrawingBar
            android:id="@+id/graphView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <ImageView
            android:id="@+id/iwLine"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:src="@drawable/line"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/graphView"/>

    <TextView
            android:id="@+id/labelPayment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/result_layout_label_payment"
            android:textSize="35px"
            android:textColor="#fc9c14"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:layout_alignBottom="@+id/valuePayment"/>

    <TextView
            android:id="@+id/valuePayment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="45sp"
            android:text="123456"
            android:textStyle="bold"
            android:textColor="#021460"
            android:typeface="sans"
            android:lines="1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="65dp"
            android:layout_alignBottom="@+id/seekBar"/>
    <SeekBar
            android:id="@+id/seekBar"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="55dp"/>
</RelativeLayout>