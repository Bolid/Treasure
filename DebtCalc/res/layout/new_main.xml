<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#e7f4eb" android:layout_gravity="center|left">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Параметры кредита"
            android:id="@+id/textView" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:textColor="#021460" android:paddingLeft="10dp" android:textSize="18dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/textView1" android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView" android:background="#021460"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_alignLeft="@+id/textView" android:layout_below="@+id/textView1"
            android:src="@drawable/marker_green_one" android:layout_marginLeft="25dp" android:layout_marginTop="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сумма кредита"
            android:id="@+id/textView2"
            android:textStyle="bold" android:textColor="#fc9c14"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/imageView" android:layout_alignBottom="@+id/imageView"
            android:layout_marginLeft="65dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 000 000"
            android:id="@+id/editText" android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/imageView" android:textColor="#021460" android:textStyle="bold"
            android:textSize="20dp" android:layout_alignLeft="@+id/textView2" android:gravity="center_vertical|right"
            android:inputType="numberDecimal" android:maxLength="10"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1" android:layout_alignLeft="@+id/textView" android:layout_below="@+id/editText"
            android:src="@drawable/marker_green_two" android:layout_marginLeft="25dp" android:layout_marginTop="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Процент"
            android:id="@+id/textView3"
            android:textStyle="bold" android:textColor="#fc9c14"
            android:textSize="18dp" android:layout_alignRight="@+id/textView2"
            android:layout_alignBottom="@+id/imageView1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/editText1" android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/imageView1" android:layout_alignLeft="@+id/textView3"
            android:textColor="#021460" android:textStyle="bold" android:textSize="20dp" android:gravity="center_vertical|right"
            android:inputType="number" android:maxLength="9"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" android:layout_alignLeft="@+id/textView"
            android:layout_below="@+id/editText1" android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp" android:src="@drawable/marker_green_three"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Срок кредита (мес)"
            android:id="@+id/textView4"
            android:textStyle="bold" android:textColor="#fc9c14"
            android:textSize="18dp"
            android:layout_alignRight="@+id/textView2" android:layout_alignBottom="@+id/imageView2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:id="@+id/editText2" android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/imageView2"
            android:textColor="#021460" android:textStyle="bold" android:textSize="20dp" android:gravity="center_vertical|right"
            android:inputType="number" android:maxLength="3"/>
    <SeekBar
            android:id="@+id/SB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>