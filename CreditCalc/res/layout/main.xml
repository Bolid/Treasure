<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#e7f4eb"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
    <TextView
            android:id="@+id/lalelTitleMain"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Параметры кредита"
            android:textColor="#010366"
            android:textStyle="bold"
            android:textSize="18dp"
            android:paddingLeft="10dp"/>
    <TextView
            android:layout_width="fill_parent" android:layout_height="1dp"
            android:id="@+id/line_1Main" android:layout_centerHorizontal="true"
            android:layout_below="@id/lalelTitleMain" android:background="#8f8f8f"/>
    <EditText
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:id="@+id/edSumCr" android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@id/line_1Main" android:singleLine="true"
            android:maxLines="1" android:inputType="numberDecimal"
            android:textColor="#010366" android:hint="Сумма (нажми для ввода)"
            android:padding="5dp"
            android:maxLength="20" android:text="900000"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/textView" android:layout_below="@+id/edSumCr"
            android:background="#8f8f8f"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etTermCredit" android:layout_gravity="center_horizontal|bottom"
            android:layout_centerHorizontal="true" android:layout_below="@id/textView"
            android:singleLine="true" android:maxLines="1" android:inputType="number"
            android:textColor="#010366" android:hint="Срок (нажми для ввода)"
            android:padding="5dp"
            android:maxLength="5" android:text="120"/>
    <TextView android:layout_width="fill_parent" android:layout_height="1dp"
              android:id="@+id/textView1"
              android:background="#8f8f8f" android:layout_centerHorizontal="true"
              android:layout_below="@+id/etTermCredit"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edPercend"
            android:layout_below="@id/textView1"
            android:singleLine="true" android:maxLines="1" android:inputType="numberDecimal"
            android:textColor="#010366" android:hint="Процент (нажми для ввода)"
            android:padding="5dp"
            android:maxLength="20" android:text="12"/>
    <TextView
            android:layout_width="fill_parent" android:layout_height="1dp"
            android:id="@+id/textView3" android:background="#8f8f8f"
            android:layout_below="@id/edPercend"/>
    <EditText
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:id="@+id/etDopPlatej" android:layout_below="@id/textView3"
            android:singleLine="true" android:maxLines="1" android:inputType="numberDecimal"
            android:textColor="#010366" android:hint="Переплата (нажми для ввода)"
            android:padding="5dp"
            android:maxLength="20" android:text="20000"/>
    <CheckBox
            android:id="@+id/cbIndexDopPlatej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etDopPlatej"
            android:textColor="#010366"
            android:text="Пересчитывать доп. платеж"/>
    <TextView
            android:id="@+id/dateStart"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbIndexDopPlatej"
            android:textColor="#010366"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/labelDateStart"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Дата первого платежа"
            android:layout_below="@id/dateStart"/>
    <Button
            android:id="@+id/butStart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Рассчитать"
            android:textStyle="bold"
            android:textColor="#6d6d6d"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

    <!--<ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_alignBaseline="@id/edSumCr"
            android:id="@+id/kj"
            />-->
</RelativeLayout>